datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model StudyRecord {
  id         String   @id @default(uuid())
  title      String
  time       Int
  created_at DateTime @default(now())
}

